version: '3.8'

services:
  zookeeper:
    image: confluentinc/cp-zookeeper:7.5.0
    # container_name: zookeeper
    hostname: zookeeper
    ports:
      - "2181:2181"
    environment:
      ZOOKEEPER_CLIENT_PORT: 2181
      ZOOKEEPER_TICK_TIME: 2000
    volumes:
      - zookeeper-data:/var/lib/zookeeper/data
      - zookeeper-log:/var/lib/zookeeper/log

  kafka:
    image: confluentinc/cp-kafka:7.5.0
    # container_name: kafka
    hostname: kafka
    depends_on:
      - zookeeper
    ports:
      - "9092:9092"     # External
      - "29092:29092"   # Internal
    extra_hosts:
      - "host.docker.internal:host-gateway"
    environment:
      KAFKA_BROKER_ID: 1
      KAFKA_ZOOKEEPER_CONNECT: zookeeper:2181
      KAFKA_LISTENERS: CLIENT_EXTERNAL://0.0.0.0:9092,CLIENT_INTERNAL://0.0.0.0:29092
      # KAFKA_ADVERTISED_LISTENERS: CLIENT_EXTERNAL://host.docker.internal:9092,CLIENT_INTERNAL://kafka:29092
      KAFKA_ADVERTISED_LISTENERS: CLIENT_EXTERNAL://localhost:9092,CLIENT_INTERNAL://kafka:29092
      KAFKA_LISTENER_SECURITY_PROTOCOL_MAP: CLIENT_EXTERNAL:PLAINTEXT,CLIENT_INTERNAL:PLAINTEXT
      KAFKA_INTER_BROKER_LISTENER_NAME: CLIENT_INTERNAL
      KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR: 1
      KAFKA_TRANSACTION_STATE_LOG_MIN_ISR: 1
      KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR: 1
    volumes:
      - kafka-data:/var/lib/kafka/data
      - kafka-log:/var/lib/kafka/logs

#  kafka-ui:
#    image: provectuslabs/kafka-ui:v0.7.2
#    user: root
#    # container_name: kafka-ui-dashboard
#
#    depends_on:
#      - kafka
#    ports:
#      - "8081:8080"
#    environment:
#      KAFKA_CLUSTERS_0_NAME: local-kafka-cluster
#      KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS: kafka:29092
#      KAFKA_CLUSTERS_0_ZOOKEEPER: zookeeper:2181



  akhq:
    image: tchiotludo/akhq:0.24.0
    depends_on:
      - kafka
    ports:
      - "8081:8080"
    environment:
      AKHQ_CONFIGURATION: |
        akhq:
          connections:
            local:
              properties:
                bootstrap.servers: "kafka:29092"

#  kafka-ui:
#    image: provectuslabs/kafka-ui:v0.7.2
#    depends_on:
#      - kafka
#    ports:
#      - "8081:8080"
#    environment:
#      KAFKA_CLUSTERS_0_NAME: local-kafka
#      KAFKA_CLUSTERS_0_BOOTSTRAPSERVERS: kafka:29092
#      KAFKA_CLUSTERS_0_ZOOKEEPER: zookeeper:2181


volumes:
  zookeeper-data:
  zookeeper-log:
  kafka-data:
  kafka-log:
